{
    "pipeline": {
        "name": "aem-aws-stack-builder-{{ item[0] | replace("/", "-") | replace(".", "-") }}-{{ item[1].os_type }}-{{ item[2] }}",
        "version": 2,
        "roleArn": "{{ ci.aws.iam.role_arn }}",
        "stages": [
            {
                "name": "Source",
                "actions": [
              {
                        "inputArtifacts": [],
                        "name": "Source",
                        "actionTypeId": {
                            "category": "Source",
                            "owner": "ThirdParty",
                            "version": "1",
                            "provider": "GitHub"
                        },
                        "outputArtifacts": [
                            {
                                "name": "{{ item[0] | replace("/", "-") | replace(".", "-") }}-{{ item[1].os_type }}-{{ item[2] }}"
                            }
                        ],
                        "configuration": {
                            "Owner": "{{ scm.organisation }}",
                            "Repo": "aem-aws-stack-builder",
                            "PollForSourceChanges": "false",
                            "Branch": "{{ item[0] }}",
                            "OAuthToken": "{{ scm.access_token }}"
                        },
                        "runOrder": 1
                    }
                ]
            },
            {
                "name": "Build",
                "actions": [
                {% for target in codebuild.target %}
                {% if target.stage == 'build' %}
                    {
                        "inputArtifacts": [
                            {
                                "name": "{{ item[0] | replace("/", "-") | replace(".", "-") }}-{{ item[1].os_type }}-{{ item[2] }}"
                            }
                        ],
                        "name": "{{ target.name }}",
                        "actionTypeId": {
                            "category": "Build",
                            "owner": "AWS",
                            "version": "1",
                            "provider": "CodeBuild"
                        },
                        "outputArtifacts": [],
                        "configuration": {
                            "ProjectName": "aem-aws-stack-builder-{{ item[0] | replace("/", "-") | replace(".", "-") }}-{{ item[1].os_type }}-{{ item[2] }}-{{ target.prefix }}"
                        },
                        "runOrder": 1
                    }
                    {% if not loop.last %}
                    ,
                    {% endif %}
                {% endif %}
                {% endfor %}
                ]
            },
            {
                "name": "Test",
                "actions": [
                {% for target in codebuild.target %}
                {% if target.stage == 'test' %}
                    {
                        "inputArtifacts": [
                            {
                                "name": "{{ item[0] | replace("/", "-") | replace(".", "-") }}-{{ item[1].os_type }}-{{ item[2] }}"
                            }
                        ],
                        "name": "{{ target.name }}",
                        "actionTypeId": {
                            "category": "Build",
                            "owner": "AWS",
                            "version": "1",
                            "provider": "CodeBuild"
                        },
                        "outputArtifacts": [],
                        "configuration": {
                            "ProjectName": "aem-aws-stack-builder-{{ item[0] | replace("/", "-") | replace(".", "-") }}-{{ item[1].os_type }}-{{ item[2] }}-{{ target.prefix }}"
                        },
                        "runOrder": 1
                    }
                    {% if not loop.last %}
                    ,
                    {% endif %}
                {% endif %}
                {% endfor %}
                ]
            },
            {
                "name": "Cleanup",
                "actions": [
                {% for target in codebuild.target %}
                {% if target.stage == 'test' %}
                    {
                        "inputArtifacts": [
                            {
                                "name": "{{ item[0] | replace("/", "-") | replace(".", "-") }}-{{ item[1].os_type }}-{{ item[2] }}"
                            }
                        ],
                        "name": "{{ target.name }}",
                        "actionTypeId": {
                            "category": "Build",
                            "owner": "AWS",
                            "version": "1",
                            "provider": "CodeBuild"
                        },
                        "outputArtifacts": [],
                        "configuration": {
                            "ProjectName": "aem-aws-stack-builder-{{ item[0] | replace("/", "-") | replace(".", "-") }}-{{ item[1].os_type }}-{{ item[2] }}-{{ target.prefix }}"
                        },
                        "runOrder": 1
                    }
                    {% if not loop.last %}
                    ,
                    {% endif %}
                {% endif %}
                {% endfor %}
                ]
            }
        ],
        "artifactStore": {
            "type": "S3",
            "location": "{{ ci.aws.s3.bucket_name }}"
        }
    }
}
